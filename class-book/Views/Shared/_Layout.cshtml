<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Adrian-Valentin Panaintescu">

    <title>@ViewBag.Title - ClassBook</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/root/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>

<body>

    <div class="d-flex" id="page">

        <div class="bg-light border-right" id="sidebar">
            <div class="sidebar-heading">@ViewBag.Title</div>
            <div class="list-group list-group-flush">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Students", "Index", "Students", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Parents", "Index", "Parents", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Teachers", "Index", "Teachers", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                }
                else
                {

                    @Html.ActionLink("Action1", "Index", "Home", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Action2", "Index", "Home", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Action3", "Index", "Home", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Action4", "Index", "Home", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                    @Html.ActionLink("Action5", "Index", "Home", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                }
                    @RenderSection("left-link", required: false)
            </div>
        </div>

        <div id="page-content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menu</button>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Link", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Action", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Another Action", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Something else here", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="@Url.Action("Index","Account")" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Action", "Index", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Sign Out", "SignOut", "Account", new { area = "" }, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Log In", "Index", "Account", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <div class="container-fluid main">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - ClassMate</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#page").toggleClass("toggled");
        });
    </script>
</body>
</html>